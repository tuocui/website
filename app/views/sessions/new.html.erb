<section id="login">
  <div class="row">
    <div class="inner-container" id="login-container">
      <h4 class="inner-header">Login</h4>

      <%= form_tag sessions_path do %>
        <p>
          <%= label_tag :username %><br />
          <%= text_field_tag :username, params[:username] %>
        </p>
        <p>
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
        </p>
        <p class="button"><%= submit_tag "Log in", :class => "form-button" %></p>
      <% end %>
    </div>
  </div>
</section>
